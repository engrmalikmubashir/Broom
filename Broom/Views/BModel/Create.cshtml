@using Broom.Extensions
@model Broom.Models.ViewModels.BModelViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add New Model</h1>
<div class="col-md-6 offset-md-3">
    <div class="card border-success rounded shadow-lg p-3">
        <div class="card-body">
            <form method="post" asp-action="Create">
                <div class="form-group">
                    <label class="font-weight-bold" asp-for="Makes"></label>
                    <select class="custom-select" asp-for="BModel.MakeId" asp-items="Model.Makes.ToSelectListItem()"></select>
                </div>
                <div class="form-group">
                    <label class="font-weight-bold" asp-for="BModel.Name"></label>
                    <input asp-for="BModel.Name" class="form-control" placeholder="Enter Model Of Bike" />
                </div>
                <div class="form-group">
                    <button class="btn btn-success" type="submit"><i class="fas fa-motorcycle"></i> Add New Model</button>
                    <a asp-action="Index" asp-controller="BModel" class="btn btn-warning"><i class="fas fa-arrow-left"></i> Back</a>
                </div>
            </form>
        </div>
    </div>
</div>