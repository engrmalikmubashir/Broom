@model IEnumerable<BModel>

@{ ViewData["Title"] = "All Models";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<h1 class="alert alert-primary text-center">Models of Bikes</h1>

<a asp-action="Create" asp-controller="BModel" class="btn btn-outline-success mb-3"><i class="fas fa-motorcycle"></i> Add New Model</a>

<table class="table table-hover table-bordered">
    <tr class="table-warning">
        <th>@Html.DisplayNameFor(m => m.Make)</th>
        <th>@Html.DisplayNameFor(m => m.Name)</th>
        <th>Actions</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@Html.DisplayFor(m => item.Make.Name)</td>
    <td>@Html.DisplayFor(m => item.Name)</td>
    <partial name="_TableButtonPartial" model="item.Id" />
</tr>
}

</table>
